<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="0"
                        android:endColor="#08000000"
                        android:startColor="#00000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:top="-1dp">
                <shape>
                    <gradient
                        android:angle="270"
                        android:endColor="#18000000"
                        android:startColor="#00000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:bottom="8dp">
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="#18000000"
                        android:startColor="#00000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:top="0.2dp" android:left="1dp" android:right="1dp">
                <shape>
                    <gradient
                        android:angle="270"
                        android:startColor="#FFFFFF"
                        android:endColor="#FFFFFF" />
                    <stroke
                        android:width="1dp"
                        android:color="#FFFFFF" />
                    <corners android:radius="6dp" />
                    <padding
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
